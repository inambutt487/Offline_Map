                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/txt_Economy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Economy"

                android:textColor="@color/text_color"
                android:textSize="@dimen/fact_heading_text"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_gdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GDP"
                    android:textColor="@color/text_color"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_gdp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"

                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_gdpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GDP per capital"
                    android:textColor="@color/text_color"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_gdpc_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
