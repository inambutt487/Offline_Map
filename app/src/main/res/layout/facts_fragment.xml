<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/cardview_default_radius">

            <TextView
                android:id="@+id/txt_demographics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Demographics"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fact_heading_text"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Life Expectancy"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_life_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_mage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Median Age"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_mage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_brate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth Rate"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_brate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_drate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Death Rate"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_drate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Population"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_population_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_sratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex Ratio"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_sratio_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fact_margin">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="@dimen/fact_padding">

                <TextView
                    android:id="@+id/txt_literacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Literacy"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_literacy_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
